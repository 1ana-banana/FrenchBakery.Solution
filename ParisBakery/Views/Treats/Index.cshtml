@{
  Layout = "_Layout";
}

@using ParisBakery.Models;
@model List<ParisBakery.Models.Treat>

<br>
<div class="card custom-card">
  <div class="card-header">
    <h1>Treats:</h1>
  </div>
  <div class="card-body">
    @if(@Model.Count == 0)
    {
      <h3>There are no treats here.</h3>
    }

    @foreach (Treat treat in Model)
    {
      <ul class="list-group" align="center">
        <li class="list-group-item list-group-item-action text-dark">@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
      </ul>
    }
  </div>
  @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
  {
    <div class="card-footer">
      @Html.ActionLink("Add a new Treat", "Create", "Treats", null, new { @class="btn btn-outline-primary" })
    </div>
  }
</div>